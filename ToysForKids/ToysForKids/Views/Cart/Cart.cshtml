@model List<ToysForKids.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cart</h1>

@if (Model.Count > 0)
{
    long total = 0;
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Count</th>
                <th>Total</th>
                <th></th>>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var cost = item.quantity * item.product.UnitPrice;
                total += cost;
                <tr>
                    <td></td>
                    <td>
                        @item.product.ProductName
                    </td>
                    <td>
                        @item.product.UnitPrice.ToString("n0")
                    </td>
                    <td>
                        <input asp-for="@item.quantity" id="@($"quantity-{item.product.ProductId}")" />
                    </td>
                    <td>
                        @total.ToString("n0")
                    </td>
                    <td>
                        <button class="btn btn-success updatecartitem" data-productid="@item.product.ProductId">
                            Update
                        </button>
                        <a asp-route="removecart" asp-route-productid="@item.product.ProductId"
                           class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right">Total Amount</td>
                <td>@(total.ToString("n0"))</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <a asp-controller="Product" asp-action="Checkout" class="btn btn-success">Checkout</a>
    @section Scripts {
        <script>
          $(document).ready(function () {
              $(".updatecartitem").click(function (event) {
                  event.preventDefault();
                  var productid = $(this).attr("data-productid");
                  var quantity = $("#quantity-" + productid).val();
                  $.ajax({
                      type: "POST",
                      url:"@Url.RouteUrl("updatecart")",
                      data: {
                          productid: productid,
                          quantity:quantity
                      },
                      success: function (result) {
                          window.location.href = "@Url.RouteUrl("cart")";
                      }
                  });
              });
          });
        </script>
    }
}
else
{
    <p class="alert alert-danger">Empty</p>
}

